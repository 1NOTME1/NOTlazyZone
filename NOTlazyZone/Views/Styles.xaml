<!-- Styles.xaml -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style for the Grid -->
    <Style TargetType="Grid" x:Key="MessageGrid">
        <Setter Property="Background" Value="#1e202b"/>
        <Setter Property="Width" Value="1600"/>
        <Setter Property="Height" Value="860"/>
    </Style>

    <!-- Style for the Label -->
    <Style TargetType="Label" x:Key="HeaderLabel">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#2a2b2b"/>
        <Setter Property="Margin" Value="0,10,0,5"/>
    </Style>

    <!-- Style for the TextBox -->
    <Style TargetType="TextBox" x:Key="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Background" Value="#282a36"/>
    </Style>

    <!-- Style for the TextBoxMessage -->
    <Style TargetType="TextBox" x:Key="TextBoxMessage">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Height" Value="500"/>
        <Setter Property="Background" Value="#282a36"/>

        <!-- Nowe ustawienie dla większego rozmiaru -->
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>


    <!-- Style for the Button -->
    <Style TargetType="Button" x:Key="Button">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="5 0 100 0"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Background" Value="#0078D7"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#0078D7"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#005A9E"/>
                <Setter Property="BorderBrush" Value="#005A9E"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style for the Label (RecipientEmail, Subject, MessageContent) -->
    <Style TargetType="Label" x:Key="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
</ResourceDictionary>

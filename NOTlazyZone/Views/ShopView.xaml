<UserControl x:Class="NOTlazyZone.Views.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NOTlazyZone.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </UserControl.Resources>

    <Grid Height="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
     
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Wszystkie produkty" FontWeight="Bold" Margin="5"/>
            <TextBox Margin="5"/>
            <Button x:Name="myButton" Content="Szukaj" Background="{Binding ButtonColor}"  Style="{StaticResource CalorieButton}"/>
           
            <StackPanel Margin="5">
                <TextBlock Text="Filtry" FontWeight="Bold"/>
                <CheckBox Content="Promocje"/>
                <TextBlock Text="Cena:"/>
                <Slider Minimum="0" Maximum="1000" TickFrequency="100" Value="500"/>
                <TextBlock Text="Wybierz rozmiar:"/>
                <ComboBox>
                    <ComboBoxItem Content="XS"/>
                    <ComboBoxItem Content="S"/>
                    <ComboBoxItem Content="M" IsSelected="True"/>
                    <ComboBoxItem Content="L"/>
                    <ComboBoxItem Content="XL"/>
                </ComboBox>
                <TextBlock Text="Marka:"/>
                <ListBox SelectionMode="Multiple">
                    <ListBoxItem Content="Nike"/>
                    <ListBoxItem Content="Adidas"/>
                    <ListBoxItem Content="Puma"/>
                    <ListBoxItem Content="Reebok"/>
                    <ListBoxItem Content="F4"/>
                    <ListBoxItem Content="New Balance"/>
                </ListBox>
                <TextBlock Text="Kolor:"/>

                <WrapPanel>
                    <CheckBox Content="Czerwony" Style="{StaticResource ColoredCheckBoxStyle}" Background="Red"/>
                    <CheckBox Content="Niebieski" Style="{StaticResource ColoredCheckBoxStyle}" Background="Blue"/>
                    <CheckBox Content="Zielony" Style="{StaticResource ColoredCheckBoxStyle}" Background="Green"/>
                    <CheckBox Content="Żółty" Style="{StaticResource ColoredCheckBoxStyle}" Background="Yellow"/>
                    <CheckBox Content="Czarny" Style="{StaticResource ColoredCheckBoxStyle}" Background="Black"/>
                    <CheckBox Content="Biały" Style="{StaticResource ColoredCheckBoxStyle}" Background="White"/>
                </WrapPanel>
            </StackPanel>

            <ListBox Height="100">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Views/icons/user.png" Width="50" Height="50" Margin="5"/>
                            <StackPanel>
                                <TextBlock Text="x" FontWeight="Bold"/>
                                <TextBlock Text="asdasd'}" Foreground="Black"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10">
                
                <Label Content="NOTLazyShop" FontWeight="Bold" FontSize="36" HorizontalAlignment="Center" Style="{StaticResource LabelCalorieText}"/>

                <Label Content="Szczegóły produktu" FontWeight="Bold" FontSize="24" />

                <Image x:Name="productImage" Source="{Binding SelectedProduct.Image}" Height="200"/>

                <TextBlock Text="Dodatkowe informacje" FontWeight="Bold" FontSize="22"/>
                <TextBox x:Name="extraInfoBox" Text="Informacje dodatkowe tutaj..." IsReadOnly="True" TextWrapping="Wrap"/>

                <TextBlock Text="Uwagi" FontWeight="Bold"/>
                <TextBox x:Name="notesBox" Text="Uwagi tutaj..." TextWrapping="Wrap"/>

                <Button Content="Potwierdź" Width="100" HorizontalAlignment="Center"  Style="{StaticResource CalorieButton}"/>
            </StackPanel>

            <Button Grid.Row="1" Margin="10" Style="{StaticResource CalorieButton}">Dodaj do koszyka</Button>
        </Grid>

        <StackPanel Grid.Column="2" Margin="10">
            <TextBlock Text="Koszyk" FontWeight="Bold" Margin="5" />
            <ListBox Height="100">
                <ListBoxItem>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Hantle" />
                        <TextBlock Text="Skakanka" />
                        <TextBlock Text="Maty do ćwiczeń" />
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
            <Button Content="Zamów" Margin="10"  Style="{StaticResource CalorieButton}"/>
        </StackPanel>

    </Grid>
</UserControl>

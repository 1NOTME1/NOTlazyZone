<Window x:Class="NOTlazyZone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NOTlazyZone"
        mc:Ignorable="d"
        
        Title="NOTlazyZone" Height="800" Width="1200"
        WindowState="Maximized">
        
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/tab.png"/>
                        <!--Create icons created by vinadbumi - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/open-folder.png" />
                        <!--Redo icons created by Freepik - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Save" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/save-file.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Exit" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/close.png" />
                        <!--Redo icons created by Freepik - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGestureText="Ctrl+Z">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/undo_1.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Redo" InputGestureText="Ctrl+Y">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/redo_1.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Cut" InputGestureText="Ctrl+X">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/cut.png" />
                        <!--Redo icons created by Freepik - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Copy" InputGestureText="Ctrl+C">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/copy.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Paste" InputGestureText="Ctrl+V">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/paste.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Select All" InputGestureText="Ctrl+A">
                    <MenuItem.Icon>
                        <Image Source="/Views/icons/select-all.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem Header="_Zoom In" InputGestureText="Ctrl++">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/zoom-in.png" />
                        <!--Zoom In icons created by Freepik - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Zoom Out" InputGestureText="Ctrl+-">
                    <MenuItem.Icon>
                        <ImageBrush ImageSource="/Views/icons/zoom-out.png" />
                        <!--Zoom Out icons created by Freepik - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Reset Zoom" InputGestureText="Ctrl+0">
                    <MenuItem.Icon>
                        <Image Source="/Views/icons/reset-zoom.png" />
                        <!--Redo icons created by Freepik - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>


            <MenuItem Header="_Tools">
                <MenuItem Header="_Options" InputGestureText="Ctrl+Alt+O">
                    <MenuItem.Icon>
                        <Image Source="/Views/icons/settings.png" />
                        <!--Redo icons created by Freepik - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Theme" InputGestureText="Ctrl+Alt+O">
                    <MenuItem.Icon>
                        <Image Source="/Views/icons/theme.png" />
                        <!--Redo icons created by Rizki Ahmad Fauzi - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_Help" InputGestureText="F1">
                    <MenuItem.Icon>
                        <Image Source="/Views/icons/help.png" Width="15" Height="15"/>
                        <!--Disclaimer icons created by rizky adhitya pradana - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_About" InputGestureText="F1">
                    <MenuItem.Icon>
                        <Image Source="/Views/icons/about.png" />
                        <!--Disclaimer icons created by rizky adhitya pradana - Flaticon-->
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem>
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="5">
                            <TextBox Width="150"  Background="Transparent" BorderThickness="0"/>
                        </Border>
                        <Image Source="/Views/icons/find.png" Width="20" Height="20" HorizontalAlignment="Right"/>
                        <!--Disclaimer icons created by Yuan Design - Flaticon-->
                    </Grid>
                </MenuItem.Header>
                <MenuItem.ToolTip>
                    <ToolTip Content="Search" />
                </MenuItem.ToolTip>
            </MenuItem>
        </Menu>

